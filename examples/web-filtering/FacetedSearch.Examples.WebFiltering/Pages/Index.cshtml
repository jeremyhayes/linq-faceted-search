@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <div class="col-3">

            <ul class="list-group">
                @foreach(var facet in Model.Facets){
                    <li class="list-group-item">
                        @facet.Name
                        <ul class="list-group">
                            @foreach(var value in facet.Values)
                            {
                                <li class="list-group-item">
                                    @value.Value
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>

        </div>
        <div class="col">

            <ul class="list-group">
                @foreach (var item in Model.Spells)
                {
                    <li class="list-group-item">
                        @item.Name
                    </li>   
                }
            </ul>

        </div>
    </div>
</div>
